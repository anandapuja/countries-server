generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Country {
  id Int @id @default(autoincrement())
  name 
  description
  flag_image
  population
  capital
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@map("countries")
}

model President {

  id
  name
  president_image
  countriesId
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@map("presidents")

}

model Religion {

  id 
  name
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@map("religions")

}

model ReligionCountry {

  id
  religions_id
  countries_id
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@religionscountries

}